<!-- Shows! Images! New! -->
        <%- include('../../../partials/header') %>
            <div class="ui center aligned inverted vertical very padded segment masthead">
                <h1 class="ui inverted header"><%= show.title %>
                    <p class="sub header">Add an Image to <%= season.name %></p>
                </h1>
            </div>
            <div class="ui vertical very padded segment container">
                <form class="ui form" enctype="multipart/form-data" action="/shows/<%= show._id %>/seasons/<%= season._id %>/images" method="POST">
                    <h2 class="ui dividing header">New Image</h2>
                        <div class="field">
                            <label for="input-desc">Description</label>
                            <input id="input-desc" type="text" name="img[description]" placeholder="e.g. Beautiful Aqua-Sama" required>
                        </div>
                        <div class="field">
                            <label for="input-img">Upload Image</label>
                            <input id="input-img" type="file" name="img[upload]" required>
                        </div>
                        <div class="grouped fields">
                            <label for="img[spoiler]">Does this contain a spoiler?</label>
                            <div class="field">
                                <div class="ui radio checkbox">
                                    <label>Yes</label>
                                    <input type="radio" name="img[spoiler]" value="true">
                                </div>
                            </div>
                            <div class="field">
                                <div class="ui radio checkbox">
                                    <label>No</label>
                                    <input type="radio" name="img[spoiler]" value="false">
                                </div>
                            </div>                            
                        </div>
                        <input class="ui primary large button" type="submit" >
                </form>
            </div> <!--/container-->
        </main>
        <script>
            $('.ui.dropdown').dropdown({
                action: 'hide'
            });
            $('.ui.radio.checkbox').checkbox();
        </script>
    <%- include('../../../partials/footer') %>